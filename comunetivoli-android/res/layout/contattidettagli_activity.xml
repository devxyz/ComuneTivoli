<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/asdrs">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/titolo_dettagli"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:textColor="@color/template_colorred" android:textSize="@dimen/app_textsize_titolo"
            android:textStyle="bold" android:padding="5dp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2" android:layout_below="@+id/titolo_dettagli">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="false"
                android:id="@+id/linearLayout" android:gravity="center_horizontal">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/screenmaps"

                    android:layout_below="@+id/titolo_dettagli"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:layout_alignParentStart="true"
                    android:background="@color/template_colorblu" android:padding="2dp" android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" android:src="@drawable/ic_plusone_medium_off_client" android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="descrizione .......... . . .. . .  .. ."
                    android:id="@+id/descrizione_dettagli"
                    android:paddingTop="10dp"
                    android:layout_centerVertical="true" android:layout_toEndOf="@+id/linearLayout"
                    android:paddingBottom="10dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" android:id="@+id/linearLayout4"
                    android:layout_below="@+id/titolo_dettagli" android:layout_alignParentStart="true">
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_email_dettagli"
                        android:src="@drawable/icona_email_50x50"
                        android:longClickable="true"
                        android:background="@color/trasparent"
                        android:layout_below="@+id/descrizione_dettagli" android:layout_toEndOf="@+id/btn_chiama_dettagli"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_maps_dettagli"
                        android:src="@drawable/icona_mappa1_50x50"
                        android:background="@color/trasparent"
                        android:layout_below="@+id/descrizione_dettagli" android:layout_toEndOf="@+id/btn_email_dettagli"
                        android:longClickable="true"
                        android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_chiama_dettagli"
                        android:background="@color/trasparent" android:src="@drawable/icona_telefono_50x50"
                        android:longClickable="true"
                        android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>