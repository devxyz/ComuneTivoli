<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/credits_sfondo">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/crediti_people"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/logo_scuola_100x100"
            android:layout_alignParentEnd="true"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/credits.coordinatore"
                android:text="@string/credits_coordinatore" android:textSize="@dimen/app_textsize_titolo"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp" android:layout_marginTop="5dp" android:textStyle="bold"
                android:paddingTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credits_coordinatorenomi"
                android:id="@+id/credits.professore"
                android:textSize="@dimen/app_textsize_sottotitolo"
                android:visibility="visible"
                android:layout_below="@+id/credits.coordinatore" android:layout_alignParentStart="true"
                android:paddingLeft="20dp" android:layout_marginBottom="0dp" android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credits_programmatori"
                android:id="@+id/home_web" android:layout_below="@+id/credits.professore"
                android:layout_alignParentStart="true" android:textSize="@dimen/app_textsize_titolo"
                android:layout_marginBottom="0dp" android:layout_marginTop="5dp" android:textStyle="bold"
                android:paddingTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credits_programmatorinomi"
                android:id="@+id/home_facebook"
                android:textSize="@dimen/app_textsize_sottotitolo"
                android:visibility="visible"
                android:layout_above="@+id/imageView4" android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp" android:paddingLeft="20dp" android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credits_grafico"
                android:id="@+id/credits.grafico"
                android:textSize="@dimen/app_textsize_titolo"
                android:layout_below="@+id/home_facebook" android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp" android:layout_marginTop="5dp" android:textStyle="bold"
                android:paddingTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credits_graficonomi"
                android:id="@+id/credits.grafica"
                android:textSize="@dimen/app_textsize_sottotitolo"
                android:visibility="visible"
                android:layout_below="@+id/credits.grafico" android:layout_alignParentStart="true"
                android:paddingLeft="20dp" android:layout_marginBottom="0dp" android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credits_alunnigrafica"
                android:id="@+id/credits.alunnigrafica"
                android:textSize="@dimen/app_textsize_titolo"
                android:layout_below="@+id/credits.grafica" android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp" android:layout_marginTop="5dp" android:textStyle="bold"
                android:paddingTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credits_alunnigraficanomi"
                android:id="@+id/credits.classegrafica"
                android:textSize="@dimen/app_textsize_sottotitolo"
                android:visibility="visible"
                android:layout_below="@+id/credits.alunnigrafica" android:layout_alignParentStart="true"
                android:paddingLeft="20dp" android:layout_marginBottom="0dp" android:layout_marginTop="5dp"/>
    </LinearLayout>
</RelativeLayout>