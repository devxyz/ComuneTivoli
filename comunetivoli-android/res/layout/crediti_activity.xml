<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/credits-sfondo">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credits_programmatori"
            android:id="@+id/credits.alunni" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:textSize="15dp" android:gravity="center_vertical|center_horizontal" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/credits.coordinatore" android:layout_above="@+id/credits.alunni"
            android:layout_centerHorizontal="true" android:text="@string/credits_coordinatore" android:textSize="15dp"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credits_grafico"
            android:id="@+id/credits.grafico" android:layout_below="@+id/credits.alunni"
            android:layout_centerHorizontal="true" android:textSize="15dp" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credits_alunnigrafica"
            android:id="@+id/credits.alunnigrafica" android:layout_below="@+id/credits.grafico"
            android:layout_centerHorizontal="true" android:textSize="15dp" android:textStyle="bold"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:src="@drawable/logoscuola" android:layout_above="@+id/credits.coordinatore"
            android:layout_alignParentRight="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageView4"
            android:src="@drawable/treteste"
            android:layout_below="@+id/credits.alunnigrafica" android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"/>
</RelativeLayout>