<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:weightSum="1" android:id="@+id/xyz"
                android:background="@color/template_colorblu">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:height="@dimen/template_height_barra_red_bottom"
            android:background="@color/template_colorred" android:layout_alignParentRight="true"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textView5"
              android:background="@color/template_colorblu" android:text=" "
              android:layout_above="@+id/textView4" android:layout_alignParentStart="true"
              android:height="@dimen/template_height_barra_blu_bottom"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:layout_below="@+id/textView14" android:layout_above="@+id/textView5"
            android:background="@color/white" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingTop="10dp">
    

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_btn_new"
            android:id="@+id/btn_news"
            android:width="120dp" android:textStyle="bold" android:textSize="20dp"
            android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView" android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contatti"
            android:id="@+id/btn_contatti"
            android:width="120dp"
            android:textStyle="bold" android:textSize="20dp"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/btn_news" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eventi"
            android:id="@+id/btn_eventi"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/btn_news" android:layout_alignStart="@+id/btn_news"
            android:layout_alignEnd="@+id/btn_news" android:layout_marginTop="10dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web"
            android:id="@+id/btn_www"
            android:textStyle="bold" android:textSize="20dp"
            android:layout_above="@+id/btn_fb" android:layout_alignStart="@+id/btn_contatti"
            android:layout_alignEnd="@+id/btn_contatti"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turismo"
            android:id="@+id/btn_turismo"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/btn_eventi" android:layout_alignStart="@+id/btn_eventi"
            android:layout_alignEnd="@+id/btn_eventi" android:layout_marginTop="10dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social"
            android:id="@+id/btn_fb"
            android:layout_above="@+id/btn_crediti" android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignStart="@+id/btn_contatti" android:layout_alignEnd="@+id/btn_contatti"
            android:layout_marginTop="10dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Crediti"
            android:id="@+id/btn_crediti"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/btn_turismo" android:layout_alignStart="@+id/btn_turismo"
            android:layout_alignEnd="@+id/btn_turismo" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DEBUG"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" android:background="#ffb700" android:gravity="center_vertical|center_horizontal"
            android:padding="10dp" android:textColor="#000000" android:textStyle="bold"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Home"
            android:id="@+id/btn_home"
            android:textStyle="bold" android:textSize="20dp"
            android:layout_alignBottom="@+id/btn_crediti"
            android:layout_alignStart="@+id/btn_fb" android:layout_alignEnd="@+id/btn_fb"
            android:layout_marginTop="10dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="image scroll"
            android:id="@+id/btnscroll"
            android:layout_below="@+id/btn_crediti" android:layout_alignStart="@+id/btn_crediti"
            android:layout_alignEnd="@+id/btn_crediti" android:layout_marginTop="10dp" android:textSize="20dp"
            android:textStyle="bold"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CHIUDI"
            android:id="@+id/btn_chiudi"
            android:textSize="20dp" android:textStyle="bold"
            android:layout_alignTop="@+id/btn_contatti" android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/btn_contatti" android:background="#ff0013"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Abilita DECOR"
            android:id="@+id/btn_abilita_dec" android:textSize="20dp" android:textStyle="bold"
            android:layout_below="@+id/btnscroll" android:layout_alignStart="@+id/btnscroll"
            android:layout_toStartOf="@+id/btn_chiudi" android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/btn_chiudi"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Disabilita DECOR"
            android:id="@+id/btn_disabilit_decor" android:textSize="20dp" android:textStyle="bold"
            android:layout_below="@+id/btn_abilita_dec" android:layout_alignStart="@+id/btn_abilita_dec"
            android:layout_toStartOf="@+id/btn_contatti" android:layout_alignEnd="@+id/btn_abilita_dec"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:id="@+id/btn_notifica" android:layout_above="@+id/btn_fb" android:layout_alignStart="@+id/btn_chiudi"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DoveMangiare"
            android:id="@+id/btn_dove_mangiare" android:layout_alignBottom="@+id/btnscroll"
            android:layout_alignTop="@+id/btnscroll" android:layout_alignEnd="@+id/btn_home"
            android:layout_alignStart="@+id/btn_home"/>
</RelativeLayout>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/template_btn_sx" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/template_trelinee"
            android:layout_alignParentLeft="true" android:layout_alignBottom="@+id/template_titolo"
            android:background="@color/trasparent"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/template_btn_dx"
                 android:src="@drawable/template_left_arrow"
                 android:paddingRight="5dp"
                 android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                 android:background="@color/trasparent" android:layout_above="@+id/textView14"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/template_titolo"
            android:textSize="@dimen/template_text"
            android:gravity="center_vertical" android:height="@dimen/template_height_barra_blu_top"
            android:layout_alignParentTop="true"
            android:textColor="@color/white" android:textStyle="bold" android:layout_toEndOf="@+id/template_btn_sx"
            android:layout_toLeftOf="@+id/template_rotate"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" "
              android:id="@+id/textView14"
              android:height="@dimen/template_height_barra_red_top" android:background="@color/template_colorred"
              android:layout_below="@+id/template_btn_sx" android:layout_alignEnd="@+id/template_btn_dx"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/template_rotate" android:src="@drawable/icona_rotazione_50x50"
                 android:layout_alignParentTop="true" android:layout_toStartOf="@+id/template_btn_dx"
                 android:background="@color/trasparent" android:paddingRight="10dp"/>
</RelativeLayout>