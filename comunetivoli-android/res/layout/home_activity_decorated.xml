<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:weightSum="1" android:id="@+id/xyz"
                android:background="#ffffff">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:height="@dimen/template_height_barra_red_bottom"
            android:background="@color/template_colorred" android:layout_alignParentRight="true"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textView5"
              android:background="@color/template_colorblu" android:text=" "
              android:layout_above="@+id/textView4" android:layout_alignParentStart="true"
              android:height="@dimen/template_height_barra_blu_bottom"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:layout_below="@+id/textView14" android:layout_above="@+id/textView5" android:padding="10dp"
            android:background="@color/white">
    


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_turismo"
            android:id="@+id/home_turismo" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:textSize="@dimen/app_textsize_titolo" android:layout_alignEnd="@+id/home_btn_turismo"
            android:gravity="center_horizontal" android:textColor="@color/template_colorblu" android:textStyle="bold"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/home_eventi" android:id="@+id/home_eventi"
              android:textSize="@dimen/app_textsize_titolo"
              android:gravity="center_horizontal" android:textColor="@color/template_colorblu" android:textStyle="bold"
              android:layout_alignParentTop="true" android:layout_alignStart="@+id/home_btn_eventi"
              android:layout_alignParentEnd="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_btn_turismo" android:layout_below="@+id/home_turismo"
            android:layout_alignParentStart="true"
            android:src="@drawable/home_sibilla" android:background="@color/trasparent"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/home_btn_eventi"
                 android:src="@drawable/eventi_small"
                 android:layout_below="@+id/home_eventi" android:layout_alignParentEnd="true"
                 android:background="@color/trasparent"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/home_notizie" android:id="@+id/textView3"
              android:textSize="@dimen/app_textsize_titolo"
              android:layout_below="@+id/home_btn_turismo" android:layout_alignParentStart="true"
              android:layout_alignEnd="@+id/home_btn_news" android:gravity="center_horizontal"
              android:textColor="@color/template_colorblu" android:textStyle="bold"
              android:layout_marginTop="10dp"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/home_btn_news"
                 android:src="@drawable/latestnews_small3"
                 android:layout_below="@+id/textView3" android:layout_alignParentStart="true"
                 android:background="@color/trasparent"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Facebook" android:id="@+id/textView6"
              android:textSize="@dimen/app_textsize_titolo"
              android:gravity="center_horizontal"
              android:textColor="@color/template_colorred"
              android:layout_alignTop="@+id/home_btn_fb" android:layout_alignStart="@+id/textView7"
              android:textStyle="bold"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/home_btn_fb"
                 android:src="@drawable/home_facebook"
                 android:background="@color/trasparent"
                 android:layout_below="@+id/home_btn_eventi" android:layout_alignEnd="@+id/home_btn_eventi"
                 android:layout_marginTop="26dp"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/home_btn_web"
                 android:src="@drawable/home_web_arrow"
                 android:background="@color/trasparent"
                 android:layout_below="@+id/home_btn_fb" android:layout_alignParentEnd="true"
                 android:layout_marginTop="10dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Web"
              android:id="@+id/textView7" android:textSize="@dimen/app_textsize_titolo" android:gravity="center_horizontal"
              android:layout_alignTop="@+id/home_btn_web" android:layout_toEndOf="@+id/home_btn_news"
              android:layout_marginLeft="10dp" android:textColor="@color/template_colorred" android:textStyle="bold"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Contatti"
              android:id="@+id/textView8" android:textSize="@dimen/app_textsize_titolo" android:gravity="center_horizontal"
              android:layout_below="@+id/home_btn_web" android:layout_toEndOf="@+id/home_btn_news"
              android:layout_marginTop="10dp" android:layout_marginLeft="10dp" android:textColor="@color/template_colorred"
              android:textStyle="bold"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/home_btn_contatti"
                 android:src="@drawable/home_contatti" android:background="@color/trasparent"
                 android:layout_below="@+id/home_btn_web" android:layout_alignParentEnd="true"
                 android:layout_marginTop="10dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="About Us"
              android:id="@+id/textView9" android:textSize="@dimen/app_textsize_titolo" android:gravity="center_horizontal"
              android:layout_below="@+id/home_btn_contatti" android:layout_toEndOf="@+id/home_btn_news"
              android:layout_marginTop="10dp" android:layout_marginLeft="10dp" android:textColor="@color/template_colorred"
              android:textStyle="bold"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/home_about_us"
                 android:src="@drawable/home_about_us" android:background="@color/trasparent"
                 android:layout_alignTop="@+id/textView9" android:layout_alignStart="@+id/home_btn_contatti"/>
</RelativeLayout>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/template_btn_sx" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/template_trelinee" android:background="@color/template_colorblu"
            android:layout_alignParentLeft="true" android:layout_alignBottom="@+id/template_titolo"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/template_btn_dx"
                 android:src="@drawable/scritta_comunetivolix50" android:layout_alignParentTop="true"
                 android:layout_alignParentEnd="true" android:layout_alignBottom="@+id/template_titolo"
                 android:background="@color/trasparent" android:paddingRight="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/template_titolo"
            android:background="@color/template_colorblu" android:textSize="@dimen/template_text"
            android:gravity="center_vertical" android:height="@dimen/template_height_barra_blu_top"
            android:layout_alignParentTop="true" android:layout_toEndOf="@+id/template_btn_sx"
            android:layout_toLeftOf="@+id/template_btn_dx" android:textColor="@color/white" android:textStyle="bold"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" "
              android:id="@+id/textView14"
              android:height="@dimen/template_height_barra_red_top" android:background="@color/template_colorred"
              android:layout_below="@+id/template_btn_sx" android:layout_alignEnd="@+id/template_btn_dx"/>
</RelativeLayout>