<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp" >

    <TextView
            android:id="@+id/contatti_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="titolo"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textIsSelectable="false" android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/template_colorred" android:textSize="@dimen/app_textsize_titolo"
            android:layout_toStartOf="@+id/contatti_image"/>

    <ImageView
            android:id="@+id/contatti_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/icona_blue_link_30x30"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testo"
            android:id="@+id/contatti_descrizione" android:layout_below="@+id/contatti_title"
            android:layout_toLeftOf="@+id/contatti_image" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="10dp" android:gravity="fill_horizontal"
    />

</RelativeLayout>
