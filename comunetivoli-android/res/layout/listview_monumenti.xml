<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titolo"
            android:id="@+id/monumenti_titolo"
            android:textSize="@dimen/app_textsize_sottotitolo"
            android:textStyle="bold"
            android:textColor="@color/template_colorblu" android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/monumenti_image"
            android:layout_alignBottom="@+id/monumenti_image"
            android:paddingLeft="5dp" android:layout_below="@+id/imageView7" android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Descrizione"
            android:id="@+id/monumenti_descrizione"
            android:layout_toEndOf="@+id/monumenti_image"
            android:padding="10dp" android:gravity="fill_horizontal" android:layout_below="@+id/monumenti_image"
            android:layout_alignParentStart="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monumenti_image"
            android:src="@drawable/monumenti_mensa_ponderaria"
            android:paddingBottom="10dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:src="@drawable/icona_down_arrow_red_50x25" android:paddingTop="5dp"/>
</RelativeLayout>