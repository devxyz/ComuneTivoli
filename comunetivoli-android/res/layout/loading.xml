<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/my_splash"
                android:weightSum="1">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading_image" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:background="@drawable/etichetta_splash_iniziale_720x1280"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loading_txt"
            android:text="Aggiornamento dati ..." android:gravity="center_vertical|center_horizontal"
            android:textSize="30dp"
            android:layout_above="@+id/progressBar" android:layout_alignParentStart="true"
            android:textColor="@android:color/black" android:textStyle="bold"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:indeterminate="true" android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" android:layout_marginBottom="80dp" android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading_details" android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/progressBar" android:layout_alignStart="@+id/progressBar"
            android:textColor="#000000" android:layout_marginTop="20dp" android:textSize="8dp" android:gravity="right"/>
</RelativeLayout>

