<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myactivity_imageView" android:layout_gravity="center_horizontal" android:src="@drawable/ic_launcher"
            android:layout_alignParentLeft="true" android:layout_marginLeft="0dp" android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" android:layout_above="@+id/loading"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loading"
            android:text="Loading..." android:gravity="center_vertical|center_horizontal"
            android:textSize="30dp"
            android:layout_above="@+id/progressBar" android:layout_alignParentStart="true"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:indeterminate="true" android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>

