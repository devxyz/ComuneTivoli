<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/my_splash"
                android:weightSum="1" android:background="@drawable/splash">
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myactivity_imageView" android:layout_gravity="center_horizontal" android:src="@drawable/splash"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true" android:layout_above="@+id/loading" android:visibility="gone"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loading"
            android:text="Loading..." android:gravity="center_vertical|center_horizontal"
            android:textSize="30dp"
            android:layout_above="@+id/progressBar" android:layout_alignParentStart="true"
            android:textColor="@android:color/black"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:indeterminate="true" android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" android:layout_marginBottom="80dp" android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
</RelativeLayout>

