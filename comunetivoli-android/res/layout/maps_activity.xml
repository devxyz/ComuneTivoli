<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              android:name="com.google.android.gms.maps.MapFragment"
              android:id="@+id/map"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:layout_above="@+id/linearLayout3"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" android:id="@+id/linearLayout3">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Livelli"
                android:id="@+id/maps_layers"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elenco"
                android:id="@+id/maps_btn_elenco"/>
    </LinearLayout>
</RelativeLayout>