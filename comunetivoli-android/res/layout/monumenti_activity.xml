<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#ffffff">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/villa_d_este"
            android:id="@+id/textView3" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:height="@dimen/app_dim_titolo" android:textColor="#fe040404" android:textStyle="bold"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/monumenti_villa_deste" android:scaleType="centerCrop"
            android:layout_toEndOf="@+id/textView3"/>


</RelativeLayout>