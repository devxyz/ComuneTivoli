<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:weightSum="1" android:id="@+id/xyz"
                android:background="@color/template_colorblu">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:height="@dimen/template_height_barra_red_bottom"
            android:background="@color/template_colorred" android:layout_alignParentRight="true"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textView5"
              android:background="@color/template_colorblu" android:text=" "
              android:layout_above="@+id/textView4" android:layout_alignParentStart="true"
              android:height="@dimen/template_height_barra_blu_bottom"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:layout_below="@+id/textView14" android:layout_above="@+id/textView5"
            android:background="@color/white" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingTop="10dp">
    

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_above="@+id/linearLayout2">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chissa Se n FUNZIONA"
                android:id="@+id/title_txt" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" android:textColor="@color/template_colorred"
                android:textSize="@dimen/app_textsize_titolo" android:textStyle="bold" android:gravity="left"
                android:paddingBottom="5dp"/>
        <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                android:layout_below="@+id/title_txt" android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" android:layout_above="@+id/linearLayout2">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:weightSum="1">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_monumento"
                        android:src="@drawable/monumenti_acquedotti_anio_vetus_e_aqua_marcia"
                        android:layout_below="@+id/title_txt" android:layout_alignParentStart="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_description"
                        android:text="villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este villa d&apos;este "
                        android:layout_below="@+id/image_monumento"
                        android:layout_alignParentStart="true" android:layout_marginTop="10dp"
                        android:gravity="fill_horizontal"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2" android:gravity="center_horizontal" android:paddingTop="10dp"
            android:paddingBottom="10dp">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/monumenti_web_btn"
                android:src="@drawable/icona_maps_50x50"
                android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:background="@color/trasparent"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/monumenti_view3d_btn"
                android:src="@drawable/icona_streetview_blue_50x50"
                android:layout_alignTop="@+id/monumenti_web_btn" android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:background="@color/trasparent"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/monumenti_maps_btn"
                android:src="@drawable/icona_mappa1_50x50"
                android:layout_alignTop="@+id/monumenti_view3d_btn" android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:background="@color/trasparent"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/monumenti_btn_gallery"
                     android:src="@drawable/icona_photo_gallery_50x50" android:layout_alignTop="@+id/monumenti_view3d_btn"
                     android:layout_alignParentEnd="true" android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp" android:background="@color/trasparent"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@+id/monumenti_btn_voice" android:src="@drawable/icona_text2speech"
                     android:layout_alignTop="@+id/monumenti_view3d_btn" android:layout_alignParentEnd="true"
                     android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                     android:background="@color/trasparent"/>
    </LinearLayout>
</RelativeLayout>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/template_btn_sx" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/template_trelinee"
            android:layout_alignParentLeft="true" android:layout_alignBottom="@+id/template_titolo"
            android:background="@color/trasparent"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/template_btn_dx"
                 android:src="@drawable/template_left_arrow"
                 android:paddingRight="5dp"
                 android:background="@color/trasparent"
                 android:layout_alignParentTop="true" android:layout_toStartOf="@+id/template_settings"
                 android:layout_above="@+id/textView14"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/template_titolo"
            android:textSize="@dimen/template_text"
            android:gravity="center_vertical" android:height="@dimen/template_height_barra_blu_top"
            android:layout_alignParentTop="true"
            android:textColor="@color/white" android:textStyle="bold" android:layout_toEndOf="@+id/template_btn_sx"
            android:layout_toLeftOf="@+id/template_rotate"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" "
              android:id="@+id/textView14"
              android:height="@dimen/template_height_barra_red_top" android:background="@color/template_colorred"
              android:layout_below="@+id/template_btn_sx" android:layout_alignParentEnd="true"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/template_rotate" android:src="@drawable/icona_rotazione_50x50"
                 android:background="@color/trasparent" android:paddingRight="10dp"
                 android:layout_alignParentTop="true" android:layout_toStartOf="@+id/template_btn_dx"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:id="@+id/template_settings"
            android:background="@color/trasparent" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:src="@drawable/icona_settings"
            android:layout_above="@+id/textView14" android:scaleType="fitEnd" android:paddingLeft="5dp"
            android:paddingRight="20dp" android:paddingTop="10dp" android:paddingBottom="10dp"/>
</RelativeLayout>