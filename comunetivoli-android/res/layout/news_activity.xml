<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/news_btn"
                    android:src="@drawable/icona_search1_50x50" android:layout_gravity="left"
                    android:background="@color/trasparent" android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_search_news"
                    android:hint="Cerca" android:singleLine="true"
                    android:visibility="invisible" android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" android:layout_toEndOf="@+id/news_btn"
                    android:layout_alignBottom="@+id/news_btn" android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/news_listview"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_search_news" android:longClickable="true"/>
    </LinearLayout>
</RelativeLayout>