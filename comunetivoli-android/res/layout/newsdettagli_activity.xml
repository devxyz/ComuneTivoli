<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="titolo"
            android:id="@+id/news_titolo" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/news_data" android:textSize="@dimen/app_textsize_titolo_big"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data"
            android:id="@+id/news_data" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:textSize="@dimen/app_textsize_titolo"/>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2"
            android:layout_below="@+id/news_titolo" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="descrizione"
                android:id="@+id/news_descrizione" android:layout_alignTop="@+id/scrollView2"
                android:layout_alignParentStart="true"/>
    </ScrollView>
</RelativeLayout>