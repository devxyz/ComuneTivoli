<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/turismo_monumenti"
            android:id="@+id/textView10"
            android:textSize="@dimen/app_textsize_titolo2"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/turismo_btn_monumenti"
            android:src="@drawable/monumenti_acquedotti_anio_vetus_e_aqua_marcia"
            android:background="@color/trasparent"
            android:layout_below="@+id/textView10" android:layout_alignParentStart="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/turismo_dove_mangiare" android:id="@+id/textView11"
              android:textSize="@dimen/app_textsize_titolo2"
              android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/turismo_btn_cosa_mangiare"
                 android:src="@drawable/internet_icon"
                 android:background="@color/trasparent"
                 android:layout_below="@+id/textView11" android:layout_alignParentEnd="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/turismo_mappa" android:id="@+id/textView12"
              android:textSize="@dimen/app_textsize_titolo2"
              android:layout_below="@+id/turismo_btn_cosa_mangiare" android:layout_alignParentStart="true"
              android:layout_marginTop="48dp"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/turismo_btn_mappa" android:src="@drawable/icona_maps"
                 android:background="@color/trasparent"
                 android:layout_marginTop="21dp" android:layout_below="@+id/textView12"
                 android:layout_alignStart="@+id/turismo_btn_monumenti"/>
</RelativeLayout>