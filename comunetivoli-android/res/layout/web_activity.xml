<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/web_titolo" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:text="WEB" android:textSize="@dimen/app_textsize_titolo" android:padding="5dp"
            android:textStyle="bold" android:textColor="@color/template_colorred"/>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webView" android:layout_below="@+id/web_titolo" android:layout_alignParentStart="true"/>
</RelativeLayout>